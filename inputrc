# viモードに
set editing-mode vi

# 大文字小文字の区別をなくす
# via http://d.hatena.ne.jp/yuta84q/20081108/1226146144
set completion-ignore-case on

# 履歴補完で前方一致を利用
# via http://d.hatena.ne.jp/yuta84q/20081108/1226146144
"\C-n": history-search-forward
"\C-p": history-search-backward

# home end
"\e[1~": beginning-of-line
"\e[4~": end-of-line

# delete with ctrl key
"\C-o": kill-line
"\C-l": delete-char

set keymap vi-command
"\e[1~": beginning-of-line
"\e[4~": end-of-line
